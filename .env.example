# Fichier d'exemple pour la configuration d'environnement
# Copiez ce fichier vers .env et adaptez les valeurs

# =============================================================================
# CONFIGURATION GÉNÉRALE
# =============================================================================

# Niveau de log (0=DEBUG, 1=INFO, 2=SUCCESS, 3=WARNING, 4=ERROR)
LOG_LEVEL=1

# Répertoire de base du workflow (laisser vide pour détecter automatiquement)
# WORKFLOW_DIR=/path/to/workflow

# =============================================================================
# CONFIGURATION DES LOGS
# =============================================================================

# Rétention des logs en jours
LOG_RETENTION_DAYS=30

# Nettoyage automatique des anciens logs (en jours)
LOG_CLEANUP_DAYS=90

# Taille maximale d'un fichier de log avant rotation (en MB)
MAX_LOG_SIZE_MB=10

# =============================================================================
# CONFIGURATION DES PROJETS
# =============================================================================

# Nombre maximum de projets autorisés
MAX_PROJECTS=100

# Activer l'auto-archivage des projets inactifs
AUTO_ARCHIVE_INACTIVE=false

# Durée d'inactivité avant archivage (en jours)
INACTIVE_THRESHOLD_DAYS=90

# =============================================================================
# CONFIGURATION CLAUDE CODE
# =============================================================================

# Chemin personnalisé vers l'exécutable Claude (optionnel)
# CLAUDE_PATH=/usr/local/bin/claude

# Clé API Claude (si nécessaire pour votre usage)
# CLAUDE_API_KEY=your_api_key_here

# Modèle Claude à utiliser (si applicable)
# CLAUDE_MODEL=claude-3-opus-20240229

# =============================================================================
# CONFIGURATION CRON
# =============================================================================

# Activer les notifications par email en cas d'erreur
ENABLE_ERROR_NOTIFICATIONS=false

# Email pour les notifications
# NOTIFICATION_EMAIL=admin@example.com

# Timezone pour les tâches cron
CRON_TIMEZONE=Europe/Paris

# =============================================================================
# CONFIGURATION AVANCÉE
# =============================================================================

# Mode de débogage (affiche plus d'informations)
DEBUG_MODE=false

# Activer la sauvegarde automatique du contexte
AUTO_BACKUP_CONTEXT=true

# Répertoire de sauvegarde
BACKUP_DIR=./backups

# Fréquence de sauvegarde (en jours)
BACKUP_FREQUENCY_DAYS=7

# =============================================================================
# SÉCURITÉ
# =============================================================================

# Activer la validation stricte des noms de projets
STRICT_PROJECT_VALIDATION=true

# Interdire l'exécution en tant que root
PREVENT_ROOT_EXECUTION=true

# =============================================================================
# PERFORMANCE
# =============================================================================

# Nombre de projets à traiter en parallèle (expérimental)
PARALLEL_PROJECTS=1

# Timeout pour les tâches Claude (en secondes)
CLAUDE_TASK_TIMEOUT=300

# =============================================================================
# INTÉGRATIONS EXTERNES
# =============================================================================

# URL de webhook pour les notifications (optionnel)
# WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Token pour l'API Slack (optionnel)
# SLACK_TOKEN=xoxb-your-token

# Channel Slack pour les notifications
# SLACK_CHANNEL=#claude-agent

# =============================================================================
# DÉVELOPPEMENT
# =============================================================================

# Mode développement (désactive certaines vérifications)
DEV_MODE=false

# Afficher les commandes exécutées
VERBOSE=false

# Utiliser des données de test
USE_TEST_DATA=false
